{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "importHelpers": true,
    "allowUmdGlobalAccess": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021",
      "es2022",
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ES5",
      "scripthost"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
